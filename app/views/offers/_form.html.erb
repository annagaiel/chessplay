<div class="col-xs-10 col-xs-offset-1">
  <h1>New Game Offer</h1>

  <%= simple_form_for @offer do |f| %>
    <div class="form-group">
    <%= f.input :days_per_turn, :label => "Days Per Turn:", :collection => [ 1, 2, 3, 5, 7, 10, 14 ], :input_html => {:id=>"Days Per Turn" }, selected: '1' %>
    <%= f.input :play_as, :label => "I Play as:", :collection => [ 'Random', 'White', 'Black' ], :input_html => {:id=>"I Play as" }, selected: 'Random' %>
    <%= f.input :rated, :label => "Rated:", :collection => [ 'Yes', 'No', 'Takeback' ], :input_html => {:id=>"Rated" }, selected: 'No' %>
    </div>
    <div class="actions">
      <%= f.button :submit, "Submit", :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>
